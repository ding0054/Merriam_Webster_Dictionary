<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#59CCC9C9">


    <ImageView
         android:id="@+id/imageView_book"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerHorizontal="true"
         android:layout_above="@+id/TextView_Dictionary"
         android:src="@drawable/dictionary"
     />

    <TextView
        android:id="@+id/TextView_Dictionary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dictionary"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#C6111111"
        android:layout_centerInParent="true"
        />
    <EditText
        android:id="@+id/EditText_LoginEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/TextView_Dictionary"
        android:textSize="20dp"
        android:textType="Email"
        android:hint="Enter Your Email to Login"/>

    <EditText
        android:id="@+id/EditText_LoginPassWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/EditText_LoginEmail"
        android:textSize="20dp"
        android:hint="Enter Your Password to Login"/>


</RelativeLayout>