<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >
        <TextView
            android:id="@+id/TextView_display"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:textStyle="bold"
            android:text="Dictionary search interface"/>

        <ImageView
            android:id="@+id/image_message_page"
            android:layout_width="150dp"
            android:layout_height="280dp"
            app:srcCompat="@drawable/AB" />

        <TextView
            android:id="@+id/TextView_message_page"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Tepy word you want to check?"/>


        <EditText
            android:id="@+id/view_edit_text"
            android:hint="Type here"
            android:layout_width="250dp"
            android:layout_height="wrap_content"/>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
            android:id="@+id/Button_Dictionary-AddWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:textColor="#C42929"
            android:text="Go Back" />

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:textColor="#C42929"
            android:text="Add Word" />

    </RelativeLayout>


</LinearLayout>